#include <stdio.h>
#include <iostream>
using namespace std;

int Size(int k) {
    cout << "Enter array lenght" << endl;
	cin >> k;
	return k;
}
void Input(double* arr, int& size) {
	int i;
	cout << "Enter " << size << " elements" << endl;
	for (int i = 0; i < size; i++) {
		cin >> arr[i];
	}
}
 
int counter(double* arr) {
	int pr2 = 0;
	while ((arr[pr2] != 0) || (arr[pr2 + 1] != 0)) {
		cout << arr[pr2] << "  ";
		pr2++;
	}
		return pr2;
}
int main()
{
	double A[20], B[20], C[20], D[20];
	int a, K = 0, F = 0,   lenghtA = 0, lenghtB = 0, pr1, pr2, i;
	lenghtA = Size(K);
	lenghtB = Size(F);
	for (i = 0; i <= 50; i++) {
		A[i] = 0;
		B[i] = 0;
		C[i] = 0;
		D[i] = 0;
	}
	Input(A, lenghtA);
	Input(B, lenghtB);

	// Перетин
	pr2 = 0;
	for (i = 0; i < lenghtA; i++) {
		for (pr1 = 0; pr1 < lenghtB; pr1++) {
			if (A[i] == B[pr1]) {
				C[pr2] = B[pr1];
				pr2++;
			}
		}
	}
	cout << endl;

	//Об'єднання

	pr2 = 0;
	for (i = 0; i < lenghtA; i++) {
		for (pr1 = 0; pr1 < lenghtB; pr1++) {
			a = 1;
			if (A[i] == B[pr1])
			{
				a = 0;
				break;
			}
		}
		if (a == 1)
		{
			D[pr2] = A[i];
			pr2++;
		}
		a = 1;
	}
	cout << endl;
	cout << "Intersection of sets - C = ";
	cout << "/  Capasity of sets - C = " << counter(C) << endl;
	cout << "Assosiation of sets - D = ";
	cout << "/  Capasity of sets - D = " << counter(D) << endl;
	return 0;
}
